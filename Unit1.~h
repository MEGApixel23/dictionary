AnsiString trans(AnsiString x) {
	AnsiString english;
	AnsiString translation;

	TStringList *list = new TStringList;
   	list->LoadFromFile("dictionary.json");

   	for (int i = 0; i < list->Count; ++i)
   	{
   		english = list->Strings[i].SubString(
	   		0, list->Strings[i].Pos(":") - 1
		);
		translation = list->Strings[i].SubString(
	   		list->Strings[i].Pos(":"), list->Strings[i].Size
		);

   		if (english == x) {
   			return translation;
   		}

   		return "None";
   	}

   	// return "Test";
}
